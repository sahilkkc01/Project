                            <script type="module">
                                import { pagi_search } from '../javascripts/pagi_search.js';
                                $(document).ready(function () {

                                    console.log("Document is ready");
                                    // Function to fetch and display data
                                    function fetchData() {
                                        $.ajax({
                                            url: '/adminInv/getAll-pack-list',
                                            type: 'GET',
                                            success: function (data) {
                                                console.log(data);
                                                data.reverse();
                                                let tableRows = '';
                                                data.forEach(function (item) {
                                                    console.log(item);
                                                    tableRows += `
                                                        <tr>
                                                            <td>${item.packageCode}</td>
                                                            <td>${item.packageName}</td>
                                                            <td>${item.shortDescription}</td>
                                                            <td>${item.longDescription}</td>
                                                            <td>${item.specialization}</td>
                                                            <td>${item.subSpecialization}</td>
                                                            <td>${item.packageRate}</td>
                                                            <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' onClick=ChangeStatusStore(${item.id}) ${item.status ? 'checked' : ''}></td>
                                                            <td>${item.subSpecialization}</td>
                                                            <td>${item.subSpecialization}</td>
                                                            </tr>
                                                        `;
                                                });
                                                $('#packListBody').html(tableRows);
                                                pagi_search('#searchBox', '#packListTable', '#paginationControls');
                                            },
                                            error: function (xhr, status, error) {
                                                console.error('Error fetching classification details:', error);
                                            }
                                        });
                                    }
                                    fetchData();
                                });
                                //
                            </script>
