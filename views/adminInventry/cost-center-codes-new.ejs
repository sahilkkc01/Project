                        <script>
                            function updateQuery(){
                        console.log("Onclick");
                                    $('#mod-btn').prop('disabled', true);   
                                    $('input[data-validation], select[data-validation]').prop('disabled', false);
                                    $('#code').prop('disabled', true);
                                    document.getElementById('sub-btn').disabled = false;
                                }
                                if('<%= result.id %>'!==''){
                                    
                                    $('input[data-validation], select[data-validation]').prop('disabled', true);
                                    document.getElementById('sub-btn').disabled = true;
                                    document.getElementById('mod-btn').disabled = false;
                                    
                                }else{
                                
                                    document.getElementById('mod-btn').disabled = true;
                                }
                        </script>

                        <script type="module">
                            import { validateForm } from '../javascripts/validation.js';
                            import { myAjax } from '../javascripts/myAjax.js';
                        
                            $(document).ready(function() {
                                console.log("Document is ready");
                        
                                // Handle final submit button click
                                $('#costCentCodeForm').on('submit', function(event) {
                                    event.preventDefault();
                                    submitForms();
                                });
                        
                                // Function to submit forms
                                const submitForms = () => {
                                    event.preventDefault();
                        
                                    const costCentCodeFormDetails = validateForm('#costCentCodeForm');
                                    const { isValid: costCentCodeFormValid, errorMessage: costCentCodeFormError, formData: costCentCodeFormData } = costCentCodeFormDetails;
                                    console.log(costCentCodeFormData);
                                    let id='<%= result.id %>'
                                    if(id){
                                        costCentCodeFormData.id=id
                                    }
                                    const errorDivId = '#errordiv1';
                        
                                    if (costCentCodeFormValid) {
                                        const url = '/adminInv/CostCentCodeSubmit';
                                        const loadingDiv = '#loadingDiv';
                                        myAjax(costCentCodeFormData, errorDivId, url, loadingDiv);
                                    } else {
                                        alert(costCentCodeFormError);
                                        $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(costCentCodeFormError).show();
                                    }
                                };
                        
                                // Function to reset forms
                                const resetForms = () => {
                                    $('#costCentCodeForm')[0].reset();
                                    // Hide error messages
                                    $('#errordiv1').hide();
                                };
                        
                                // Attach reset function to cancel button
                                $('#submitCancel').on('click', function() {
                                    resetForms();
                                });
                            });
                        </script>
                        
                        