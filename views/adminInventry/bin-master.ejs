                            <script type="module">
                                import { pagi_search } from '../javascripts/pagi_search.js';
                                $(document).ready(function () {

                                    console.log("Document is ready");
                                    // Function to fetch and display data
                                    
                                    let dataList
                                    function fetchData() {
                                        $.ajax({
                                            url: '/adminInv/get-bin-mst_data',
                                            type: 'GET',
                                            success: function (data) {
                                                console.log(data);
                                                dataList = data.binMst
                                                dataList.reverse();
                                                let tableRows = '';
                                                dataList.forEach(function (item) {
                                                    tableRows += `
                                                        <tr data-store-id="${item.id}">
                                                            <td><a type="button" class="btn btn-primary btn-style btn-change" id="view_btn">View</a></td>
                                                            <td>${item.bin_code}</td>
                                                            <td>${item.bin_desc}</td>
                                                            <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' onClick=ChangeStatus('${item.id}','${data.Encschema}',${item.id}) ${item.status ? 'checked' : ''}></td>
                                                        </tr>
                                                        `;
                                                });

                                                $('#binMaster').on('click', '#view_btn', function() {
                                                    const id=$(this).closest('tr').data('store-id')
                                                    const route='15'
                                                    const module='adminInv'
                                                    console.log("id", id);
                                                    ViewBtn(route,id,module) 
                                                    });

                                                $('#binMaster').html(tableRows);
                                                pagi_search('#searchBox', '#BinMasterTable', '#paginationControls');
                                            },
                                            error: function (xhr, status, error) {
                                                console.error('Error fetching classification details:', error);
                                            }
                                        });
                                    }

                                    fetchData();
                                });
                            </script>

