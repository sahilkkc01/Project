<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>LifeLinker</title>
    <%- include('../header') -%> 
</head>

<body>
    <!-- main content start -->
    <div class="main-content">
        <div class="row content-top-gap2">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <a class="navbar-brand text-center mr-5" href="#">
                        <span class="dash-icon"><i class="fas fa-tachometer-alt"></i></span>
                        Dashboard
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <!-- Your navigation items -->
                        </ul>
                    </div>
                </nav>
            </div>
        </div>

        <!-- content -->
        <div class="container-fluid">
            <div class="chart">
                <div class="row">
                    <div class="col-lg-12 pl-lg-2 mt-3 chart-grid">
                        <form>
                            <div class="card card_border">
                                <div class="card">
                                    <div class="col-xl-12 p-heading">
                                        <h6 class="p-text">RATE CONTRACT</h6>
                                    </div>
                                    <div class="form-row pl-lg-3 pr-lg-3 mt-2">
                                        <div class="col-lg-3 col-md-4 col-sm-12 mb-1">
                                            <div class="form-group">
                                                <label class="input__label">Code / Description / Date</label>
                                                <input name="description" type="text" class="form-control input-style" id="searchBox" placeholder="">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-md-4 col-sm-12 mb-3">
                                            <div class="form-group">
                                                <button type="button" class="btn-primary btn-style mt-4 btn btn-change"><strong><i class="fas fa-search"></i> Search</strong></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>

                    <!-- CONTRACT LIST section -->
                    <div class="mt-1 col-lg-12 pl-lg-2 pr-lg-3">
                        <div class="card card_border">
                            <div class="mb-3">
                                <div class="form-group">
                                    <div class="col-xl-12 p-heading">
                                        <h6 class="p-text">CONTRACT LIST</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-12 mb-3 pl-lg-4 pr-lg-4">
                                    <div class="slidx">
                                        <table class="table2" id="rateContTable">
                                            <thead>
                                                <tr>
                                                    <th>View</th>
                                                    <th>Code</th>
                                                    <th>Description</th>
                                                    <th>Contract Date</th>
                                                    <th>Contract Start Date</th>
                                                    <th>Contract End Date</th>
                                                    <th>Supplier</th>
                                                    <th>Freeze</th>
                                                    <th>Net Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody id="rateContBody">
                                                <!-- Rows will be dynamically populated here -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- CONTRACT DETAILS LIST section -->
                    <div class="mt-4 col-lg-12 pl-lg-2 pr-lg-3">
                        <div class="card card_border">
                            <div class="mb-3">
                                <div class="form-group">
                                    <div class="col-xl-12 p-heading">
                                        <h6 class="p-text">CONTRACT DETAILS LIST</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-12 mb-3 pl-lg-4 pr-lg-4">
                                    <div class="slidx">
                                        <table class="table2">
                                            <thead>
                                                <tr>
                                                    <th>Item Code</th>
                                                    <th>Item Name</th>
                                                    <th>Quantity</th>
                                                    <th>UOM</th>
                                                    <th>Purchase Cost Price</th>
                                                    <th>MRP</th>
                                                    <th>Discount Amount</th>
                                                    <th>Net Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody id="contractDetailsBody">
                                                <!-- Rows will be dynamically populated here -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="form-group mt-1 mb-3 text-right">
                    <button type="button" class="btn-success btn-style btn mt-3 mr-2" disabled><strong><i class="fa-regular fa-pen-to-square"></i> Modify</strong></button>
                    <a type="button" class="btn-secondary btn-style btn mt-3 mr-2" href="/adminInv/45"><strong><i class="fa-solid fa-plus"></i> New</strong></a>
                    <button type="button" class="btn-danger btn-style btn mt-3 mr-2" disabled><strong><i class="fas fa-times"></i> Cancel</strong></button>
                    <button type="button" class="btn-primary btn-style btn mt-3" disabled><strong><i class="far fa-save"></i> Save</strong></button>
                </div>
            </form>
        </div>
    </div>

    <!-- footer section start -->
    <%- include('../footer') -%>
    <script src="../javascripts/updateStatus.js"></script>
    <script src="../javascripts/pageUpdate.js"></script>
    <script type="module">
        import { pagi_search } from '../javascripts/pagi_search.js';
        $(document).ready(function() {
            console.log("Document is ready");
            let dataList;

            function fetchData() {
                $.ajax({
                    url: '/adminInv/getAll-rateContract-list',
                    type: 'GET',
                    success: function(data) {
                        console.log(data);
                        dataList = data.result;
                        dataList.reverse();
                        let tableRows = '';
                        dataList.forEach(function(item) {
                            console.log(item);
                            tableRows += `
                                <tr data-contract-code="${item.code}">
                                    <td><button type="button" id="view_btn" class="btn btn-primary btn-style btn-change">View</button></td>
                                    <td>${item.code}</td>
                                    <td>${item.description}</td>
                                    <td>${item.contractDate}</td>
                                    <td>${item.contractStartDate}</td>
                                    <td>${item.contractEndDate}</td>
                                    <td>${item.supplier}</td>
                                    <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' ${item.isFreeze ? 'checked' : ''}></td>
                                    <td>${item.net_amount}</td>
                                </tr>
                            `;
                        });
                        $('#rateContBody').html(tableRows);
                        pagi_search('#searchBox', '#rateContTable', '#paginationControls');
                    },
                    error: function(xhr, status, error) {
                        console.error('Error fetching classification details:', error);
                    }
                });
            }

            fetchData();

            function fetchContractDetails(contractCode) {
                $.ajax({
                    url: `/adminInv/get-contract-details/${contractCode}`,
                    type: 'GET',
                    success: function(data) {
                        let details = data.details;
                        let tableRows = details.map(detail => `
                            <tr>
                                <td>${detail.item_code}</td>
                                <td>${detail.item_name}</td>
                                <td>${detail.purchase_quantity}</td>
                                <td>${detail.transaction_uom}</td>
                                <td>${detail.purchase_cost_price}</td>
                                <td>${detail.mrp}</td>
                                <td>${detail.discount_amount}</td>
                                <td>${detail.net_amount_item}</td>
                            </tr>
                        `).join('');
                        $('#contractDetailsBody').html(tableRows);
                    },
                    error: function(xhr, status, error) {
                        console.error('Error fetching contract details:', error);
                    }
                });
            }

            $('#rateContBody').on('click', 'tr', function() {
                $('#rateContBody tr').removeClass('locked');
                $(this).addClass('locked');

                let contractCode = $(this).data('contract-code');
                fetchContractDetails(contractCode);
            });
        });
    </script>
</body>

</html>
