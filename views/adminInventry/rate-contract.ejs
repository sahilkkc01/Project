        <script type="module">
            import { pagi_search } from '../javascripts/pagi_search.js';
            $(document).ready(function () {
                console.log("Document is ready");
                // Function to fetch and display data
                let dataList
                function fetchData() {
                    $.ajax({
                        url: '/adminInv/getAll-rateContract-list',
                        type: 'GET',
                        success: function (data) {
                            console.log(data);
                            dataList = data.result
                            dataList.reverse();
                            let tableRows = '';
                            dataList.forEach(function (item) {
                            console.log(item);
                                tableRows += `
                                    <tr>
                                        <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' onClick=ChangeStatus('${item.id}','${data.Encschema}',${item.id}) ${item.status ? 'checked' : ''}></td>
                                        <td>${item.code}</td>
                                        <td>${item.description}</td>
                                        <td>${item.contractDate}</td>
                                        <td>${item.contractStartDate}</td>
                                        <td>${item.contractEndDate}</td>
                                        <td>${item.supplier}</td>
                                        <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' onClick=isFreeze('${item.id}') ${item.isFreeze ? 'checked' : ''}></td>
                                        <td>${item.netAmount}</td>
                                    `;
                            
                            });
                            $('#rateContBody').html(tableRows);
                            pagi_search('#searchBox', '#rateContTable', '#paginationControls');
                        },
                        error: function (xhr, status, error) {
                            console.error('Error fetching classification details:', error);
                        }
                    });
                }
                fetchData();
            });
        </script>
