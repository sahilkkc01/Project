<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Module</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .rack {
            border: 2px solid #000;
            margin-bottom: 20px;
        }
        .row {
            display: flex;
        }
        .column {
            border: 1px solid #000;
            flex: 1;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<%- include('../header') -%>
<body>
    <div class="container mt-4">
        <h2>Create Rack</h2>
        <div class="mb-3">
            <label for="rows" class="form-label">Number of Rows</label>
            <input type="number" class="form-control" id="rows" min="1" value="1">
        </div>
        <button class="btn btn-primary mb-3" onclick="generateColumnInputs()">Next</button>

        <div id="columnInputsContainer"></div>
        <button class="btn btn-primary d-none" id="createRackBtn" onclick="createRack()">Create Rack</button>

        <div id="rackContainer" class="mt-4"></div>
    </div>

    <script>
        function generateColumnInputs() {
            const rows = document.getElementById('rows').value;
            const columnInputsContainer = document.getElementById('columnInputsContainer');
            columnInputsContainer.innerHTML = '';

            for (let i = 0; i < rows; i++) {
                const div = document.createElement('div');
                div.className = 'mb-3';
                div.innerHTML = `
                    <label for="columns${i}" class="form-label">Number of Columns in Row ${i + 1}</label>
                    <input type="number" class="form-control" id="columns${i}" min="1" value="1">
                `;
                columnInputsContainer.appendChild(div);
            }

            document.getElementById('createRackBtn').classList.remove('d-none');
        }

        function createRack() {
            const rows = document.getElementById('rows').value;
            const rackContainer = document.getElementById('rackContainer');
            rackContainer.innerHTML = '';

            const rack = document.createElement('div');
            rack.className = 'rack';

            for (let i = 0; i < rows; i++) {
                const columns = document.getElementById(`columns${i}`).value;
                const row = document.createElement('div');
                row.className = 'row';

                for (let j = 0; j < columns; j++) {
                    const column = document.createElement('div');
                    column.className = 'column';
                    column.innerHTML = `Box ${i + 1}-${j + 1}`;
                    row.appendChild(column);
                }
                rack.appendChild(row);
            }
            rackContainer.appendChild(rack);
        }
    </script>

</body>
<%- include('../footer') -%>
</html>
