                        <script>
                            function updateQuery(){
                        console.log("Onclick");
        $('#mod-btn').prop('disabled', true);   
        $('input[data-validation], select[data-validation]').prop('disabled', false);
        $('#currency_code').prop('disabled', true);
        document.getElementById('sub-btn').disabled = false;
      }
      if('<%= result.id %>'!==''){
        
        $('input[data-validation], select[data-validation]').prop('disabled', true);
        document.getElementById('sub-btn').disabled = true;
        document.getElementById('mod-btn').disabled = false;
        
      }else{
       
        document.getElementById('mod-btn').disabled = true;
      }
                        </script>
                            <script type="module">
                                import { validateForm } from '../javascripts/validation.js';
                                import { myAjax } from '../javascripts/myAjax.js';

                                $(document).ready(function () {
                                    console.log("Document is ready");

                                    // Handle final submit button click
                                    $('#Currency_master').on('submit', function (event) {
                                        event.preventDefault();
                                        submitForms(event);
                                    });

                                    // Function to submit forms
                                    const submitForms = (event) => {
                                        event.preventDefault();

                                        const currencyMoveFormDetails = validateForm('#Currency_master');
                                        const { isValid: iscurrencyMoveFormValid, errorMessage: currencyMoveFormError, formData: currencyMoveFormData } = currencyMoveFormDetails;

                                        // Handle checkbox values (assuming similar checkboxes exist in the form)

                                        console.log(currencyMoveFormData);
                                        let id='<%= result.id %>';
                                    if (id) {
                                        console.log(id);
                                        currencyMoveFormData.id=id
                                            }
                                        const errorDivId = '#errordiv1';

                                        if (iscurrencyMoveFormValid) {
                                            const url = '/adminInv/CurrencyMoveSubmit';
                                            const loadingDiv = '#loadingDiv';
                                            myAjax(currencyMoveFormData, errorDivId, url, loadingDiv);
                                        } else {
                                            alert(currencyMoveFormError);
                                            $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(currencyMoveFormError).show();
                                        }
                                    };

                                    // Function to reset forms
                                    const resetForms = () => {
                                        $('#Currency_master')[0].reset();
                                        // Hide error messages
                                        $('#errordiv1').hide();
                                    };

                                    // Attach reset function to cancel button
                                    $('#submitCancel').on('click', function () {
                                        resetForms();
                                    });
                                });
                            </script>