                                    <script type="module">
                                        import { validateForm } from '../javascripts/validation.js';
                                        import { myAjax } from '../javascripts/myAjax.js';
                                    
                                        $(document).ready(function() {
                                            console.log("Document is ready");
                                    
                                            // Handle final submit button click
                                            $('#storeTypeForm').on('submit', function(event) {
                                                event.preventDefault();
                                                submitForms();
                                            });
                                    
                                            // Function to submit forms
                                            const submitForms = () => {
                                                event.preventDefault();
                                    
                                                const storeTypeFormDetails = validateForm('#storeTypeForm');
                                                const { isValid: storeTypeFormValid, errorMessage: storeTypeFormError, formData: storeTypeFormData } = storeTypeFormDetails;
                                                console.log(storeTypeFormData);
                                                let id='<%= result.id %>';
                                                if (id) {
                                                    console.log(id);
                                                    storeTypeFormData.id=id
                                                }
                    
                                                const errorDivId = '#errordiv1';
                                    
                                                if (storeTypeFormValid) {
                                                    const url = '/adminInv/storeTypeFormSubmit';
                                                    const loadingDiv = '#loadingDiv';
                                                    myAjax(storeTypeFormData, errorDivId, url, loadingDiv);
                                                } else {
                                                    alert(storeTypeFormError);
                                                    $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(storeTypeFormError).show();
                                                }
                                            };
                                    
                                            // Function to reset forms
                                            const resetForms = () => {
                                                $('#storeTypeForm')[0].reset();
                                                // Hide error messages
                                                $('#errordiv1').hide();
                                            };
                                    
                                            // Attach reset function to cancel button
                                            $('#submitCancel').on('click', function() {
                                                resetForms();
                                            });
                                        });
                    
                    
                                    </script>
                                    <script>
                                        function updateQuery(){
                                            console.log("Onclick");
                                            $('#mod-btn').prop('disabled', true);
                                            $('input[data-validation], select[data-validation]').prop('disabled', false);
                                            $('#code').prop('disabled', true);
                                            document.getElementById('sub-btn').disabled = false;
                                        }
                                        if('<%= result.id %>'!==''){
                                            console.log($('input[data-validation]'));
                                            $('input[data-validation], select[data-validation]').prop('disabled', true);
                                            document.getElementById('sub-btn').disabled = true;
                                            document.getElementById('mod-btn').disabled = false;
                                            
                                        }else{
                                        
                                            document.getElementById('mod-btn').disabled = true;
                                        }
                                </script>