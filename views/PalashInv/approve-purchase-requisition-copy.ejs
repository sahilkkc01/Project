                                <button type="button" class="btn-secondary btn-style btn mt-3 mr-2" id="approveBtn" disabled><strong><i class="fa-solid fa-check"></i> Approved</strong></button>
                                <button type="button" class="btn-secondary btn-style btn mt-3 mr-2"><strong><i class="fa-solid fa-print"></i> Print</strong></button>
                                <button type="button" class="btn-success btn-style btn mt-3 mr-2" disabled><strong><i class="fa-regular fa-pen-to-square"></i> Modify</strong></button>
