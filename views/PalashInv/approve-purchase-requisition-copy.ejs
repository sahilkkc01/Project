    <%- include('../footer'); -%>

    <script>
        $(document).ready(function () {
    console.log("Document is ready");

    function formatDate(dateString) {
        const options = { year: 'numeric', month: 'short', day: 'numeric' };
        return new Date(dateString).toLocaleDateString(undefined, options);
    }

    function fetchData() {
        $.ajax({
            url: '/palashinv/getAll-requisitions',
            type: 'GET',
            success: function (data) {
                console.log(data);
                let dataList = data;
                dataList.reverse();
                let tableRows = '';
                dataList.forEach(function (item) {
                    tableRows += `
                        <tr data-requisition-code="${item.id}" data-freeze="${item.freeze}">
                            <td><button type="button" id="view_btn" class="btn btn-primary btn-style btn-change view-btn">View</button></td>
                            <td>${formatDate(item.requisition_date)}</td>
                            <td>${item.requisition_no}</td>
                            <td>${item.clinic}</td>
                            <td>${item.from_store}</td>
                            <td>${item.to_store}</td>
                            <td>${formatDate(item.due_date)}</td>
                            <td>${item.po_no}</td>
                            <td>${item.grn_no}</td>
                            <td>${item.issue_no}</td>
                            <td>${item.status}</td>
                            <td>Manual</td>
                            <td><input type="checkbox"  class="freeze-checkbox" data-id="${item.id}" ${item.freeze ? 'checked disabled' : ''}></td>
                            <td><input type="checkbox" disabled class="approved-checkbox" data-id="${item.id}" ${item.approved ? 'checked disabled' : ''}></td>
                            <td><button type="button" class="btn btn-danger btn-style btn-change cancel-btn cancel" data-id="${item.id}" ${item.approved ? 'disabled' : ''}><i class="fas fa-times"></i></button></td>
                        </tr>
                    `;
                });
                $('#rateContBody').html(tableRows);
            },
            error: function (xhr, status, error) {
                console.error('Error fetching requisition details:', error);
            }
        });
    }

    fetchData();

    // Handle row selection
    $('#rateContBody').on('click', 'tr', function () {
        $('#rateContBody tr').removeClass('locked');
        $(this).addClass('locked');

        let requisitionCode = $(this).data('requisition-code');
        let freeze = $(this).data('freeze');

        if (freeze) {
            fetchRequisitionDetails(requisitionCode);
            $('#approveBtn').prop('disabled', false); // Enable the Approve button
        }
    });

    // Handle "Approve" button click
    $('#approveBtn').on('click', function () {
        let selectedRow = $('#rateContBody tr.locked');
        if (selectedRow.length === 0) {
            alert('Please select a requisition to approve.');
            return;
        }

        let requisitionCode = selectedRow.data('requisition-code');

        // Send approval request
        $.ajax({
            url: `/palashinv/approve-requisition/${requisitionCode}`,
            type: 'POST',
            success: function (response) {
                alert('Requisition approved successfully.');
                fetchData(); // Refresh the data
            },
            error: function (xhr, status, error) {
                console.error('Error approving requisition:', error);
            }
        });
    });

    $('#rateContBody').on('click', '#view_btn', function () {
        const id = $(this).closest('tr').data('requisition-code');
        const route = '12';
        const module = 'palashinv';
        ViewBtn(route, id, module);
    });

    $('#rateContBody').on('click', '.cancel', function (event) {
        event.stopPropagation(); // Prevent the row click event
        let requisitionId = $(this).data('id');
        cancelRequisition(requisitionId);
    });

    $('#rateContBody').on('change', '.freeze-checkbox', function (event) {
        let requisitionId = $(this).data('id');
        let freezeStatus = $(this).is(':checked');
        updateFreezeStatus('requisition', requisitionId, freezeStatus);
    });

    function fetchRequisitionDetails(requisitionCode) {
        $.ajax({
            url: `/palashinv/get-requisition-details/${requisitionCode}`,
            type: 'GET',
            success: function (data) {
                console.log(data);
                let details = data.items;
                let fetchDetailsPromises = details.map(detail => {
                    return new Promise((resolve, reject) => {
                        $.ajax({
                            url: `/palashinv/get-items/${detail.item_code}`,
                            type: 'GET',
                            success: function (itemData) {
                                detail.uom = itemData.stocking_uom;
                                detail.item_name = itemData.item_name;
                                resolve(detail);
                            },
                            error: function (xhr, status, error) {
                                console.error('Error fetching item details:', error);
                                reject(error);
                            }
                        });
                    });
                });

                Promise.all(fetchDetailsPromises)
                    .then(updatedDetails => {
                        let tableRows = updatedDetails.map(detail => `
                            <tr>
                                <td>${detail.item_name}</td>
                                <td>${detail.requisition_quantity}</td>
                                <td>${detail.uom}</td>
                            </tr>
                        `).join('');
                        $('#contractDetailsBody').html(tableRows);
                    })
                    .catch(error => {
                        console.error('Error updating details with item details:', error);
                    });
            },
            error: function (xhr, status, error) {
                console.error('Error fetching requisition details:', error);
            }
        });
    }

    function cancelRequisition(requisitionId) {
        $.ajax({
            url: `/palashinv/delete-requisition/${requisitionId}`,
            type: 'DELETE',
            success: function (response) {
                console.log(`Requisition ${requisitionId} deleted successfully`);
                fetchData(); // Refresh the data
            },
            error: function (xhr, status, error) {
                console.error('Error deleting requisition:', error);
            }
        });
    }

    function updateFreezeStatus(type, id, freezeStatus) {
        $.ajax({
            url: `/palashinv/update-freeze-status/${type}/${id}`,
            type: 'POST',
            data: JSON.stringify({ freeze: freezeStatus }),
            contentType: 'application/json',
            success: function (response) {
                alert(`${type.charAt(0).toUpperCase() + type.slice(1)} Freezed and Updated Successfully`);
                console.log(`Freeze status of ${type} ${id} updated successfully`);
                fetchData(); // Refresh the data
            },
            error: function (xhr, status, error) {
                console.error(`Error updating freeze status for ${type}:`, error);
            }
        });
    }
});

    </script>
    
    
