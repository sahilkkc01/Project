    <script type="module">
        import { pagi_search } from '../javascripts/pagi_search.js';
    
        $(document).ready(function() {
            console.log("Document is ready");
            let dataList;
    
            function formatDate(dateString) {
                const options = { year: 'numeric', month: 'short', day: 'numeric' };
                return new Date(dateString).toLocaleDateString(undefined, options);
            }
    
            function fetchData() {
                $.ajax({
                    url: '/palashinv/getAll-indents',
                    type: 'GET',
                    success: function(data) {
                        console.log(data);
                        dataList = data;
                        dataList.reverse();
                        let tableRows = '';
                        dataList.forEach(function(item) {
                            console.log(item);
                            tableRows += `
                                <tr data-indent-code="${item.id}" data-freeze="${item.freeze}">
                                    <td><button type="button" id="view_btn" class="btn btn-primary btn-style btn-change view-btn">View</button></td>
                                    <td>${formatDate(item.indent_date)}</td>
                                    <td>${item.indent_no}</td>
                                    <td>${item.clinic}</td>
                                    <td>${item.from_store}</td>
                                    <td>${item.to_store}</td>
                                    <td>${formatDate(item.exp_del_date)}</td>
                                    <td>${item.mr_no_pat}</td>
                                    <td>${item.patient_name}</td>
                                    <td>${item.reference_no}</td>
                                    <td>${item.po_no}</td>
                                    <td>${item.grn_no}</td>
                                    <td>${item.issue_no}</td>
                                    <td>${item.status}</td>
                                    <td><input type="checkbox" class="freeze-checkbox" data-id='${item.id}' ${item.freeze ? 'checked disabled' : ''}></td>
                                    <td><input type="checkbox" class="approved-checkbox" disabled data-id='${item.id}' ${item.approved ? 'checked' : ''}></td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-style btn-change cancel-btn" data-id="${item.id}" ${item.freeze ? 'disabled' : ''}>
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </td>
                                </tr>
                            `;
                        });
                        $('#rateContBody').html(tableRows);
                        $('#rateContBody').on('click', '#view_btn', function() {
                            const id = $(this).closest('tr').data('indent-code');
                            const route = '10';
                            const module = 'palashinv';
                            ViewBtn(route, id, module);
                        });
                        $('#total_indents').val(dataList.length); // Set total indents count
                        pagi_search('#searchBox', '#rateContTable', '#paginationControls');
                    },
                    error: function(xhr, status, error) {
                        console.error('Error fetching indent details:', error);
                    }
                });
            }
    
            fetchData();
    
            function fetchIndentDetails(indentCode) {
                // alert(indentCode)
                $.ajax({
                    url: `/palashinv/get-indent-details/${indentCode}`,
                    type: 'GET',
                    success: function(data) {
                        console.log('sd',data);
                        let details = data.details;
                        let fetchDetailsPromises = details.map(detail => {
                            return new Promise((resolve, reject) => {
                                $.ajax({
                                    url: `/palashinv/get-items/${detail.item_code}`,
                                    type: 'GET',
                                    success: function(itemData) {
                                        // console.log(data)
                                       
                                        detail.item_name = itemData.item_name;
                                        resolve(detail);
                                    },
                                    error: function(xhr, status, error) {
                                        console.error('Error fetching item details:', error);
                                        reject(error);
                                    }
                                });
                            });
                        });
    
                        Promise.all(fetchDetailsPromises)
                            .then(updatedDetails => {
                                let tableRows = updatedDetails.map(detail => `
                                    <tr>
                                        <td>${detail.item_name}</td>
                                        <td>${detail.indent_quantity}</td>
                                        <td>${detail.pending_quantity}</td>
                                        <td>${detail.uom}</td>
                                    </tr>
                                `).join('');
                                $('#contractDetailsBody').html(tableRows);
                            })
                            .catch(error => {
                                console.error('Error updating details with item details:', error);
                            });
                    },
                    error: function(xhr, status, error) {
                        console.error('Error fetching indent details:', error);
                    }
                });
            }
    
            function cancelIndent(indentId) {
                $.ajax({
                    url: `/palashinv/delete-indent/${indentId}`,
                    type: 'DELETE',
                    success: function(response) {
                        console.log(`Indent ${indentId} deleted successfully`);
                        fetchData(); // Refresh the data
                    },
                    error: function(xhr, status, error) {
                        console.error('Error deleting indent:', error);
                    }
                });
            }
    
            function updateFreezeStatus(id, freezeStatus, type) {
                $.ajax({
                    url: `/palashinv/update-freeze-status/${type}/${id}`,
                    type: 'POST',
                    data: JSON.stringify({ freeze: freezeStatus }),
                    contentType: 'application/json',
                    success: function(response) {
                        alert(`${type.charAt(0).toUpperCase() + type.slice(1)} Freezed and Updated Successfully`);
                        console.log(`Freeze status of ${type} ${id} updated successfully`);
                        fetchData(); // Refresh the data
                    },
                    error: function(xhr, status, error) {
                        console.error(`Error updating freeze status of ${type}:`, error);
                    }
                });
            }
    
            // Event delegation to handle click events for dynamically created buttons
            $('#rateContBody').on('click', 'tr', function() {
                $('#rateContBody tr').removeClass('locked');
                $(this).addClass('locked');
    
                let indentCode = $(this).data('indent-code');
                let freeze = $(this).data('freeze');
    
                if (freeze) {
                    fetchIndentDetails(indentCode);
                }
            });
    
            $('#rateContBody').on('click', '.cancel-btn', function(event) {
                event.stopPropagation(); // Prevent the row click event
                let indentId = $(this).data('id');
                cancelIndent(indentId);
            });
    
            $('#rateContBody').on('change', '.freeze-checkbox', function(event) {
                let indentId = $(this).data('id');
                let freezeStatus = $(this).is(':checked');
                updateFreezeStatus(indentId, freezeStatus, 'indent');
    
                // Disable the cancel button if freeze is checked
                if (freezeStatus) {
                    $(this).closest('tr').find('.cancel-btn').prop('disabled', true);
                } else {
                    $(this).closest('tr').find('.cancel-btn').prop('disabled', false);
                }
            });
        });
    </script>
    