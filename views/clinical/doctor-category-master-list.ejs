            <script>
function pagi_seach(){
  const rowsPerPage = 5;
    let currentPage = 1;

    function filterTable() {
        const searchTerm = $('#searchBox').val().toLowerCase();
        const rows = $('#doctor-details-table tbody tr');

        rows.each(function() {
            const rowText = $(this).text().toLowerCase();
            if (rowText.includes(searchTerm)) {
                $(this).show();
            } else {
                $(this).hide();
            }
        });
    }

function paginateTable() {
        const rows = $('#doctor-details-table tbody tr');
        const totalRows = rows.length;
        const totalPages = Math.ceil(totalRows / rowsPerPage);

        // Hide all rows
        rows.hide();

        // Show only the rows for the current page
        rows.slice((currentPage - 1) * rowsPerPage, currentPage * rowsPerPage).show();

        // Generate pagination buttons
        let paginationButtons = '';
        for (let i = 1; i <= totalPages; i++) {
            paginationButtons += `<button class="page-btn btn-primary btn-style ${i === currentPage ? 'active' : ''}" data-page="${i}" >${i}</button>`;
        }

        $('#paginationControls').html(paginationButtons);

        // Add click event for pagination buttons
        $('.page-btn').on('click', function() {
            currentPage = $(this).data('page');
            paginateTable();
        });
    }

    $('#searchBox').on('keyup', function() {
        filterTable();
        currentPage = 1;
        //paginateTable();
    });

    filterTable();
    paginateTable();
}

 $(document).ready(function() {
    $.ajax({
        url: '/clinic/doc-cat-master',
        method: 'GET',
        success: function(response) {
            const doctorDetails = response; // Assuming the response is the array of doctor details
            const tableBody = $('#doctor-details-table tbody');
            tableBody.empty();

            doctorDetails.forEach((item) => {
                const row = `<tr data-doccat-id="${item.id}">
                    <td><button type="button" id="view_btn" class="btn btn-primary btn-style btn-change">View</button></td>
                    <td>${item.doc_cat_master_code}</td>
                    <td>${item.doc_cat_master_desc}</td>
                    <td><input class="form-check-input mt-0"  onclick="updateStatus('${item.id}', this.checked,'<%= a %>','clinic')" type="checkbox" ${item.status ? 'checked' : ''}></td>
                </tr>`;

                tableBody.append(row);

            });
            $('#doctor-details-table').on('click', '#view_btn', function() {
              const id=$(this).closest('tr').data('doccat-id')
                      const route='9'
