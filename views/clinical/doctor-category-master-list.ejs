                      ViewBtn(route,id,module)   
                                });
                       

            pagi_seach()
        },
        error: function(xhr) {
            $('#errordiv1').removeClass('alert-success').addClass('alert-danger').text('Error fetching data from the database').show();
        }
    });
});

