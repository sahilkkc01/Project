        <script>
           function updateQuery(){
        document.getElementById('query').value=1;
        $('#mod-btn').prop('disabled', true);   
        $('input[data-validation], select[data-validation]').prop('disabled', false);
        $('#doc_cat_master_code').prop('disabled', true);
        document.getElementById('sub-btn').disabled = false;
      }
      if('<%= a.id %>'!==''){
        $('input[data-validation], select[data-validation]').prop('disabled', true);
        document.getElementById('sub-btn').disabled = true;
        document.getElementById('mod-btn').disabled = false;
        
      }else{
      
        document.getElementById('mod-btn').disabled = true;
      }
      if('<%= a.status %>'!=='true'){
        document.getElementById('mod-btn').disabled = true;
      }
                  
          document.getElementById('doc_cat_master_code').value = '<%= a.doc_cat_master_code %>';
          document.getElementById('doc_cat_master_desc').value = '<%= a.doc_cat_master_desc %>';
          
        </script>

        <script>
          $(document).ready(function() {

            console.log("Document is ready");
        
            function validateForm(formId, errorDivId) {
              $(formId).on('submit', function(event) {
                event.preventDefault();
                console.log("Form submission prevented");
                let isValid = true;
                let errorMessage = '';
        
                // Reset previous validation states
                $(this).find('.is-invalid').removeClass('is-invalid');
        
                const inputs = $(this).find('input, select').toArray().reverse();
                let formData = {};
        
                inputs.forEach(function(input) {
                  const $input = $(input);
                  const validationRules = $input.data('validation');
                  const customErrorMessage = $input.data('error-message') || 'This field is required.';
        
                  if (validationRules) {
                    const rules = validationRules.split(' ');
        
                    rules.forEach(rule => {
                      switch (rule) {
                        case 'required':
                          if (!$input.val()) {
                            isValid = false;
                            errorMessage = customErrorMessage;
                            $input.addClass('is-invalid');
                            console.log(`Validation failed: ${customErrorMessage}`);
                          }
                          break;
                        case 'email':
                          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                          if (!emailRegex.test($input.val())) {
                            isValid = false;
                            errorMessage = customErrorMessage;
                            $input.addClass('is-invalid');
                          }
                          break;
                        // Add more cases here for different validation rules
                      }
                    });
                  }
        
                  formData[$input.attr('name')] = $input.val();
                });
        
                if (isValid) {
                  $.ajax({
                    url: '/clinic/doctor-category-master',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function(response) {
                      alert(response.msg);
                      window.location.href = '/clinic/10';
                      $(errorDivId).removeClass('alert-danger').addClass('alert-success').text(response.msg).show();
                      console.log('Response:', response);
                    },
                    error: function(xhr, status, error) {
                      
                      $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(xhr.responseJSON.msg).show();
                      console.error('Error:', error);
                    }
                  });
                } else {
                  alert(errorMessage);
                  $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(errorMessage).show();
                }
              });
            }
        
            validateForm('#doctor-category-form', '#errordiv1');
          });
        </script>
        
