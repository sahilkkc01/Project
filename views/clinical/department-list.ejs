            <script type="module">
              

              import {pagi_search} from '../javascripts/pagi_search.js'
           
              $(document).ready(function() {
              
              function fetchData() {
                $.ajax({
                  url: '/clinic/get-dept-details',
                  type: 'GET',
                  success: function(data) {
                    let tableRows = '';
                    data.reverse();
                    data.forEach(function(item) {
                    
                      // alert(id)
                      // console.log(item)
                      tableRows += `
                        <tr data-dept-id="${item.id}">
      <td><button type="button" id="view_btn" class="btn btn-primary btn-style btn-change">View</button></td>
      <td>${item.dept_code}</td>
      <td>${item.dept_desc}</td>
      <td>${item.dept_isClinic}</td>
       <td><input class="form-check-input mt-0 status-checkbox" onclick="updateStatus('${item.id}', this.checked,'<%= a %>','clinic')"  type="checkbox" id="status_${item.id}" name="status_${item.id}" ${item.status ? 'checked' : ''}></td>
    </tr>
                      `;
                    });


                    $('#dept-dtl').on('click', '#view_btn', function() {
                      const deptId = $(this).closest('tr').data('dept-id');      
axios.get('/clinic/8', {
  params: {
    dept_id: deptId 
  }
})
.then(response => {
  // console.log('Success:', response.data);
  window.location.href = `/clinic/8?dept_id=${deptId}`; 
 
})
.catch(error => {
  console.error('Error:', error);
});
                       });
            
                    $('#dept-dtl').html(tableRows);
                    pagi_search('#searchBox','#tableid','#paginationControls')
                  },
                  error: function(xhr, status, error) {
                    console.error('Error fetching classification details:', error);
                  }
                });
              }
            
              // Fetch data on page load
              fetchData();
            });
            
            </script>
            
                 