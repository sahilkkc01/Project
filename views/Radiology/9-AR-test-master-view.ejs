<script type="module">
  import {pagi_search} from '../javascripts/pagi_search.js'
  
   

    $(document).ready(function () {
        console.log("Document is ready");

        function fetchData() {
    axios.get('/radiology/getTemplateMaster')
        .then(response => {
            console.log(response.data.TempMasData);
            let data = response.data.TempMasData;
            let tableRows = '';

            data.forEach(item => {
                tableRows += `
                    <tr data-mod-id="${item.id}">
                        <td contenteditable="true">
                            <input
                                class="form-check-input mt-1"
                                type="checkbox"
                                id="status-checkbox"
                                value="${item.id}">
                        </td>
                        <td>${item.description}</td>
                        <td>
                            <button type="button" id="view-btn" class="btn btn-primary btn-style btn-change">View</button>
                        </td>
                    </tr>
                    `;
            });

            $('#categtable').html(tableRows);

            $('#categtable').on('click', '#view-btn', function () {
                const id = $(this).closest('tr').data('mod-id');
                alert(id);
                ViewBtn('6', id, 'radiology');
            });

            pagi_search('#searchBox', '#data-table', '.paginationControls');
        })
        .catch(error => {
            console.error('Error fetching data:', error);
        });
}
        fetchData();
    });
</script>
<script type="module">
    import { validateForm } from '../javascripts/validation.js';
    import { myAjax } from '../javascripts/myAjax.js';
    $(document).ready(function () {
    console.log("Document is ready");

    $('#testMasterView').on('submit', function (event) {
        event.preventDefault();
        const { isValid, errorMessage, formData } = validateForm('#testMasterView');

        let id = '<%= data.id %>';
        if (id) {
            formData.id = id;
        }

        // Collect selected template IDs
        let selectedTemplates = [];
        $('#categtable input[type="checkbox"]:checked').each(function () {
            selectedTemplates.push($(this).val()); 
        });
        formData.selectedTemplates = selectedTemplates; // Add selected templates to formData

        console.log(formData);
        const errorDivId = '#errordiv1';

        if (isValid) {
            const url = '/radiology/anomalyScan';
            const loadingDiv = '#loadingIndicator';
            myAjax(formData, errorDivId, url, loadingDiv);
        } else {
            alert(errorMessage);
            $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(errorMessage).show();
        }
    });
});
</script>  