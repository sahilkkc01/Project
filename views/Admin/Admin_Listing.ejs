                              import { pagi_search } from '../javascripts/pagi_search.js';
                            

                            $(document).ready(function () {
                                console.log("Document is ready");
                               
                                function fetchData() {
                                 
    axios.get('/Admin/getAdmin')
        .then(function (response) {
            console.log(response.data);
            let data = response.data;
            let tableRows = '';

            data.forEach(function (item) {
                // Assuming rights is an object or needs to be parsed
                const rights = typeof item.rights === 'string' ? JSON.parse(item.rights) : item.rights;
                let rightsDisplay = Object.entries(rights || {})
                    .filter(([key, value]) => value === true)  // Filter rights where the value is true
                    .map(([key]) => `<li>${key}</li>`)  // Wrap each right in an <li> tag
                    .join('');  // Join all list items without a separator

                tableRows += `
                <tr data-dept-id="${item.id}">
                    <td>
                        <button type="button" class="btn btn-primary btn-style btn-change view-btn">View</button>
                    </td>
                    <td>${item.username}</td>
                    <td>${item.clinicId}</td>
                    <td>${item.clinicName}</td>
                    <td>${item.createdBy}</td>
                    <td><ul>${rightsDisplay}</ul></td> <!-- Embed the rightsDisplay within an <ul> tag -->
                    <td>${item.Freeze ? 'Yes' : 'No'}</td>
                    <td><input class="form-check-input mt-0 status-checkbox" type="checkbox" data-id="${item.id}" ${item.status ? 'checked' : ''}></td>
                </tr>
                `;
            });

            // Update the table's HTML
            $('#categtable').html(tableRows);

            // Attach event handler for newly added view buttons
            attachViewButtonEvent();
            pagi_search('#searchBox', '#data-table', '#paginationControls');
        })
        .catch(function (error) {
            console.error('Error fetching data:', error);
        });
}



// Function to attach event handler for view buttons
function attachViewButtonEvent() {
    // Ensure event delegation for dynamically added content
    $('#categtable').on('click', '.view-btn', function () {
        const deptId = $(this).closest('tr').data('dept-id');
        ViewBtn('2', deptId, 'Admin');
    });
}

                                $('#categtable').on('click','#status-checkbox', function () {
