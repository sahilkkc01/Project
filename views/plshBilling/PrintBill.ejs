    </div>


</body>
<script>
    console.log('<%=a.date%>')
   document.getElementById("patientName").innerHTML="<strong>Patient Name:</strong> <%=patient.firstName%>";
  document.getElementById("billNo").innerHTML="<strong>Bill No:</strong> <%=a.bill_no%>";
  document.getElementById("mrNO").innerHTML="<strong>Mr No:</strong> <%=a.mrNo%>";
  document.getElementById("billDate").innerHTML="<strong>Bill Date :</strong> <%=a.date%>";
  document.getElementById("regDate").innerHTML="<strong>Registration Date :</strong> <%=patient.date%>";
  document.getElementById("conNo").innerHTML="<strong>Contact No :</strong> <%=patient.mobileNo%>";

