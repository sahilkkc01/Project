                        <script type="module">
                            $(document).ready(function () {
                                    console.log("Document is ready");
                                    function fetchData() {
                                        $.ajax({
                                            url: '/plshBill/get-payment-change',
                                            type: 'GET',
                                            success: function (data) {
                                                console.log(data);
                                                // data.newBill.reverse()
                                                data.reverse();
                                                console.log(data);
                                                let tableRows1 = '';
                                                data.forEach(function (item) {
                                                    tableRows1 += `
                                                        <tr data-mod-id="${item.id}">
                                                            <td>View</td>
                                                            <td>Req Type</td>
                                                            <td>Date </td>
                                                            <td>Bill No</td>
                                                            <td>${item.mrNo}</td>
                                                            <td>Opd No</td>
                                                            <td>Name</td>
                                                            <td>${item.totalPayAmount}</td>
                                                            <td>${item.totalConcessionAmount}</td>
                                                            <td>${item.totalNetAmount}</td>
                                                            <td>${item.paidAmount}</td>
                                                            <td>${item.totalPayAmount}</td>
                                                        </tr>
                                                    `;
                                                });
        
                                                $('#paymentChangeModeBody').html(tableRows1);
                                                pagi_search('#searchBox', '#paymentChangeModeTable', '#paginationControls');
                                            },
                                            error: function (xhr, status, error) {
                                                console.error('Error fetching classification details:', error);
                                            }
                                        });
                                    }
                                    fetchData();
        
                                    
                                });
                        </script>