        <!-- content -->
        <div class="container-fluid">
            <div class="chart">
                <div class="row">
                    <div class="col-lg-12 pl-lg-0 mt-2 ml-2">
                        <h4 class="primary">New Expenses Details</h4>
                    </div>  
                    <div class="col-lg-12 pl-lg-2 chart-grid">
                        <form id="expensesForm">
                            <div id="errordiv1"></div>
                            <div class="card card_border">
                                <div class="">
                                    <div class="card">
                                        <div class="col-xl-12 p-heading">
                                            <h6 class="p-text">EXPENSES Details</h6>
                                        </div>

                                        <div class="card-body pt-lg-2">
                                            <div class="form-row">
                                                <div class="col-xl-3 col-md-4 col-sm-12 mb-1">
                                                    <div class="form-group">
                                                        <label class="input__label">Clinic</label>
                                                        <select name="clinic"
                                                            class="form-control input-style"
                                                            data-validation="required" data-error-message="Clinic is required.">
                                                            <option>Select</option>
                                                            <option value="Shree Ram">Shree Ram</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-4 col-sm-12 mb-1">
                                                    <div class="form-group">
                                                        <label class="input__label">Expense Against</label>
                                                        <select name="expenseAgainst"
                                                            class="form-control input-style"
                                                            data-validation="required" data-error-message="Expense Against is required.">
                                                            <option>Select</option>
                                                            <option value="Mohan">Mohan</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-4 col-sm-12 mb-1">
                                                    <div class="form-group">
                                                        <label class="input__label">Voucher No.</label>
                                                        <input name="voucherNo" type="text"
                                                            class="form-control input-style"
                                                            placeholder="" data-validation="required" data-error-message="Voucher No. is required.">
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-4 col-sm-12 mb-1">
                                                    <div class="form-group">
                                                        <label class="input__label">Voucher Date</label>
                                                        <input name="voucherDate" type="date"
                                                            class="form-control input-style"
                                                            placeholder="" data-validation="required" data-error-message="Voucher Date is required.">
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-4 col-sm-12 mb-1 mt-0">
                                                    <div class="form-group">
                                                        <label class="input__label">Amount</label>
                                                        <input name="amount" type="number"
                                                            class="form-control input-style"
                                                            placeholder="" data-validation="required" data-error-message="Amount is required.">
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-4 col-sm-12 mb-1 mt-0">
                                                    <div class="form-group">
                                                        <label class="input__label">Voucher Created By</label>
                                                        <input name="voucherCreatedBy" type="text"
                                                            class="form-control input-style"
                                                            placeholder="" data-validation="required" data-error-message="Voucher Created By is required.">
                                                    </div>
                                                </div>
                                                <div class="col-lg-3 col-md-4 col-sm-12 mb-3">
                                                    <div class="form-group">
                                                        <label class="input__label">Remarks</label>
                                                        <textarea name="remarks" class="form-control input-style"
                                                            placeholder="" data-validation="required" data-error-message="Remarks are required."></textarea>
                                                    </div>
                                                </div>
                                                <div class="form-check-label text-right">
                                                    <div class="radio mr-0 pt-4 mb-0">
                                                        <label class="form-check-label pt-1">
                                                            <input class="form-check-input mt-1" type="checkbox" name="isFreezeExpenses" id="isFreezeExpenses"
                                                                data-validation="required" data-error-message="You must agree to freeze expenses.">
                                                            Freeze Expenses
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="loadingDiv"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mt-1 mb-3 text-right">
                                    <button type="button" class="btn-secondary btn-style btn mt-3 mr-">
                                        <strong><i class="fa-solid fa-plus"></i> New </strong>
                                    </button>
                                    <a type="button" class="btn-danger btn-style btn mt-3 mr-2" href="/plshBill/10">
                                        <strong><i class="fas fa-times"></i> Cancel</strong>
                                    </a>
                                    <button type="submit" class="btn-primary btn-style btn mt-3">
                                        <strong><i class="far fa-save"></i> Save</strong>
                                    </button>
                                </div>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../footer') -%>
    <script type="module">
        import { validateForm } from '../javascripts/validation.js';
        import { myAjax } from '../javascripts/myAjax.js';
    
        $(document).ready(function() {
            console.log("Document is ready");
    
            // Handle final submit button click
            $('#expensesForm').on('submit', function(event) {
                event.preventDefault();
                submitForms();
            });
    
            // Function to submit forms
            const submitForms = () => {
                event.preventDefault();
    
                const expensesFormDetails = validateForm('#expensesForm');
                const { isValid: expensesFormValid, errorMessage: expensesFormError, formData: expensesFormData } = expensesFormDetails;
                var isFreezeExpenses = $('#isFreezeExpenses').is(':checked');
                console.log(isFreezeExpenses);
            // Do something with the value
            if (isFreezeExpenses) {
                expensesFormData.isFreezeExpenses=true
            } else {
                expensesFormData.isFreezeExpenses=false
            }

                console.log(expensesFormData);
                // let id=
                // if(id){
                //     expensesFormData.id=id
                // }
                const errorDivId = '#errordiv1';
                if (expensesFormValid) {
                    const url = '/plshBill/expenses-form-submit';
                    const loadingDiv = '#loadingDiv';
                    myAjax(expensesFormData, errorDivId, url, loadingDiv);
                } else {
                    alert(expensesFormError);
                    $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(expensesFormError).show();
                }
            };
    
            
        });
    </script>