    setDisplayStyle('#chequeDiv', paymentMethod === 'cheque');
    setDisplayStyle('#ePaymentDiv', paymentMethod === 'ePayment');
    setDisplayStyle('#ttDiv', paymentMethod === 'tt');
    setDisplayStyle('#cardDiv', paymentMethod === 'card');
});

