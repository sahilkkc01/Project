                        <script type="module">
                            import { pagi_search } from '../javascripts/pagi_search.js';
                            $(document).ready(function () {
                                console.log("Document is ready");
                                // Function to fetch and display data
                                
                                function fetchData() {
                                    $.ajax({
                                        url: '/plshBill/get-doctor',
                                        type: 'GET',
                                        success: function (data) {
                                            console.log(data);
                                            data.reverse();
                                            let tableRows = '';
                                            data.forEach(function (item) {
                                                console.log(item);
                                                tableRows += `
                                                    <tr data-store-id="${item.id}">
                                                        <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' onClick=ChangeStatus('${item.id}','${data.Encschema}',${item.id},'status') ${item.status ? 'checked' : ''}></td>
                                                        <td>${item.doc_name}</td>
                                                        <td>${item.doc_spec}</td>
                                                        <td>${item.doc_sub_spec}</td>
                                                    `;
                                            });
                                            $('#DrTbodyId').html(tableRows);
                                            pagi_search('#searchBox', '#DrTableId', '#paginationControls');
                                        },
                                        error: function (xhr, status, error) {
                                            console.error('Error fetching classification details:', error);
                                        }
                                    });
                                }
                                fetchData();
                            });
                        </script>