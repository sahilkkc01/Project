                        <script type="module">
                            import { pagi_search } from '../javascripts/pagi_search.js';
                            $(document).ready(function () {
                                console.log("Document is ready");
                                // Function to fetch and display data
                                let dataList
                                function fetchData() {
                                    $.ajax({
                                        url: '/plshBill/get-expenses',
                                        type: 'GET',
                                        success: function (data) {
                                            console.log(data);
                                            dataList = data.result
                                            dataList.reverse();
                                            let tableRows = '';
                                            dataList.forEach(function (item) {
                                                console.log(item);
                                                tableRows += `
                                                    <tr data-store-id="${item.id}">
                                                        <td><a type="button" class="btn btn-primary btn-style btn-change" id="view_btn">View</a></td>
                                                        <td>${item.voucherNo}</td>
                                                        <td>${item.voucherDate}</td>
                                                        <td>${item.clinic}</td>
                                                        <td>${item.expenseAgainst}</td>
                                                        <td>${item.amount}</td>
                                                        <td>${item.voucherCreatedBy}</td>
                                                        <td>${item.remarks}</td>
                                                        <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' onClick=ChangeStatus('${item.id}','${data.Encschema}',${item.id},'status') ${item.status ? 'checked' : ''}></td>
                                                        <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' onClick=ChangeStatus('${item.id}','${data.Encschema}',${item.id},'isFreezeExpenses') ${item.isFreezeExpenses ? 'checked' : ''}></td>
                                                    `;
                                            });
    
                                            $('#ExpTbodyId').on('click', '#view_btn', function() {
                                                        const id=$(this).closest('tr').data('store-id')
                                                        const route='11'
                                                        const module='plshBill'
                                                        console.log("id", id);
                                                        ViewBtn(route,id,module) 
                                                        });
    
                                            $('#ExpTbodyId').html(tableRows);
                                            pagi_search('#searchBox', '#ExpTableId', '#paginationControls');
                                        },
                                        error: function (xhr, status, error) {
                                            console.error('Error fetching classification details:', error);
                                        }
                                    });
                                }
                                fetchData();
                            });
                        </script>
