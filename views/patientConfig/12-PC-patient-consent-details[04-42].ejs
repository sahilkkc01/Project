<script type="module">
    import { pagi_search } from '../javascripts/pagi_search.js';
    import { validateForm } from '../javascripts/validation.js';
    import { myAjax } from '../javascripts/myAjax.js';

    $(document).ready(function () {
        console.log("Document is ready");

        // Function to load services and populate the select
         // Function to load services and populate the select
         function loadServices() {
            $.ajax({
                url: '/patient/getDepartments',
                method: 'GET',
                success: function(data) {
                    const select = $('#departments, #fields');
                    select.empty(); // Clear existing options

                    // Add a default select option
                    const defaultOption = $('<option>', {
                        value: "",
                        text: "Please select"
                    });
                    select.append(defaultOption);

                    data.forEach(item => {
                        const option = $('<option>', {
                            value: item.id,
                            text: item.dept_desc
                        });

                        // Conditionally set the selected attribute
                        if (item.dept_desc === "<%= s %>") {
                            option.attr('selected', 'selected');
                        }

                        select.append(option);
                    });
                },
                error: function(xhr, status, error) {
                    console.error('Error fetching services:', error);
                }
            });
        }

        loadServices();

        $('#consent').on('submit', function(event) {
            event.preventDefault();
            const { isValid, errorMessage, formData } = validateForm('#consent');

            if (!isValid) {
                alert(errorMessage);
                $('#errordiv1').removeClass('alert-success').addClass('alert-danger').text(errorMessage).show();
                return;
            }

            const serializedArray = $(this).serializeArray();
            const jsonFormData = serializedArray.reduce((obj, item) => {
                obj[item.name] = item.value;
                return obj;
            }, {});

            console.log(jsonFormData);
            const url = '/patient/PatientConcentSubmit';
            const loadingDiv = '#loadingIndicator';

            $.ajax({
                type: 'POST',
                url: url,
                contentType: 'application/json',
                data: JSON.stringify(jsonFormData),
                beforeSend: function() {
                    $(loadingDiv).text('Loading...').show();
                },
                success: function(response) {
                    $(loadingDiv).hide();
                    alert('Form submitted successfully!');
                    $('#errordiv1').removeClass('alert-danger').addClass('alert-success').text('Form submitted successfully!').show();
                    console.log('Response:', response);
                },
                error: function(xhr, status, error) {
                    $(loadingDiv).hide();
                    let response = xhr.responseText;
                    try {
                        response = JSON.parse(xhr.responseText);
                    } catch (e) {
                        response = { msg: 'An error occurred while processing your request.' };
                    }
                    console.error('Error:', response);
                    $('#errordiv1').removeClass('alert-success').addClass('alert-danger').text(response.msg).show();
                }
            });
        });

    });
</script>