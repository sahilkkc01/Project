              $(document).ready(function() {

                function maskPhoneNumber(phone) {
  // Replace 4 inner digits with asterisks (123***7890)
  if (phone && phone.length >= 10) {
    return phone.slice(0, 2) + '*****' + phone.slice(-3); // Show first 3 and last 3 digits
  }
  return phone; // Return the original if it doesn't fit
}

function maskEmail(email) {
  // Mask the first part of the email, show the domain (exa****@gmail.com)
  if (email) {
    const [localPart, domain] = email.split('@');
    if (localPart && domain) {
      const visibleChars = localPart.slice(0, 3); // Show first 3 characters
      return visibleChars + '****@' + domain;
    }
  }
  return email; // Return the original if it doesn't fit
}

function fetchData() {
  $.ajax({
    url: '/get-pat-dtl',
    type: 'GET',
    success: function(data) {
      console.log(data);
      let tableRows = '';

      data.data.reverse().forEach(function(item) {
        const maskedPhone = maskPhoneNumber(item.contact_no_wife);
        const maskedEmail = maskEmail(item.lead_owner); // Uncomment if you want to mask emails

        tableRows += `
          <tr data-kyc-id="${item.id}" data-kyc-no="${item.lead_no}">
            <td>${item.lead_no}</td>
            <td>${item.patient_name}</td>
            <td>${item.spouce_name}</td>
            <td>${maskedPhone}</td>
            <td>${item.city}</td>
            <td>${maskedEmail}</td>
            <td>${item.crmVisRecord.uhid_no || ''}</td>
            
            <td><button type="button" id="view_btn" class="btn btn-primary btn-style btn-change">View</button></td>
            <td  ${(!item.crmVisRecord || item.crmVisRecord.visited_status === 'Not Booked') ? 'style=display:none;' : ''}><button type="button" id="reg_btn" class="btn btn-primary btn-style btn-change"   >Register</button></td>
          </tr>
        `;
      });

      $('#kyc-dtl').on('click', '#view_btn', function() {
        const kycId = $(this).closest('tr').data('kyc-id');      
        axios.get('/home', {
          params: {
            kyc_id: kycId 
          }
        })
        .then(response => {
          window.location.href = `/home?kyc_id=${kycId}`; 
        })
        .catch(error => {
          console.error('Error:', error);
        });
      });
      $('#kyc-dtl').on('click', '#reg_btn', function() {
        const patId = $(this).closest('tr').data('kyc-no');  
        
        axios.get('/findpatient/2', {
          params: {
            patId: patId
          }
        })
        .then(response => {
          window.location.href = `/findpatient/2?patId=${patId}`; 
        })
        .catch(error => {
          console.error('Error:', error);
        });
      });

      $('#kyc-dtl').html(tableRows);
      pagi_search('#searchBox', '#tableid', '#paginationControls');
    },
    error: function(xhr, status, error) {
      console.error('Error fetching classification details:', error);
    }
  });
}

// Fetch data on page load
