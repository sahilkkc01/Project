<script>
   function validateEventDate() {
    const dateInput = document.getElementById('date');
    const selectedDate = new Date(dateInput.value);
    const today = new Date();
    
    // Reset time for comparison purposes
    today.setHours(0, 0, 0, 0);

    if (selectedDate < today) {
        alert('The event date must be today or a future date.');
        dateInput.value = ''; // Clear the invalid date
    }
}

// Attach this function to the date input field onchange event
document.getElementById('date').addEventListener('change', validateEventDate);

</script>
