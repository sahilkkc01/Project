                            <script type="module">

                                import { pagi_search } from '../javascripts/pagi_search.js';
                                $(document).ready(function () {

                                    console.log("Document is ready");
                                    // Function to fetch and display data
                                    function fetchData() {
                                        $.ajax({
                                            url: '/billing/get-trf-list',
                                            type: 'GET',
                                            success: function (data) {
                                                console.log(data);
                                                data.reverse();
                                                let tableRows = '';
                                                data.forEach(function (item) {
                                                    console.log(item);
                                                    tableRows += `
                                                        <tr data-mod-id='${item.id}'>
                                                            <td><button id='view-btn' class="btn btn-primary btn-style btn-change" >View</button></td>
                                                            <td>${item.serviceCode}</td>
                                                            <td></td>
                                                            <td>${item.serviceName}</td>
                                                            <td>${item.baseServiceRate}</td>
                                                            <td>${item.className}</td>
                                                            <td>${item.className_rate}</td>
                                                            <td>${item.service_amount}</td>
                                                            <td>${item.staffDiscount_amount}</td>
                                                            <td>${item.staffParent_amount}</td>
                                                            <td>${item.concession_amount}</td>
                                                            <td>${item.doctor_amount}</td>
                                                        </tr>
                                                        `;
                                                });
                                                $('#trfList').html(tableRows);
                                                pagi_search('#searchBox', '#trfListTable', '#paginationControls');
                                            },
                                            error: function (xhr, status, error) {
                                                console.error('Error fetching classification details:', error);
                                            }
                                        });
                                    }
                                    $('#trfList').on('click', '#view-btn',function(){
                                       const id=$(this).closest('tr').data('mod-id')
                                       console.log(id)
                                         ViewBtn('5',id,'billing');      
                                   });
                                    fetchData();
                                });
                            </script>