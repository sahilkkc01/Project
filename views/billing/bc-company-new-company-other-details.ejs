            <!-- content -->
            <div class="container-fluid">

                <div class="chart">
                    <div class="row">

                        <div class="col-lg-12 pl-lg-0 mt-2 ml-2">
                            <h4 class="primary">Company</h4>
                        </div>
                        <div class="col-lg-12 pl-lg-2 chart-grid">

                            <div id="errordiv1"></div>
                            <form id="bc-c-n-o-t" method="post" enctype="multipart/form-data">
                                <div class="card card_border">
                                    <div class="">
                                        <!--Past your code here starts-->

                                        <div class="card">

                                            <div class="card-body">
                                                <div class="pl-xl-0 mb-3">
                                                    <h6 class="primary">Company Other Details</h6>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-12 mb-3">
                                                        <div class="form-group">
                                                            <div class="col-xl-12 p-heading">
                                                                <h6 class="p-text">COMPANY HEADER FOOTER TEXT</h6>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-row">
                                                    <div class="form-row">
                                                        <div class="col-6 mb-3">
                                                            <div class="form-group">
                                                                <label class="input__label">Header text</label>
                                                                <div id="compHeader" class="form-control input-style" data-validation="required"
                                                                    data-error-message="Header Text is required.">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-6 mb-3">
                                                            <div class="form-group">
                                                                <label class="input__label">Footer text</label>
                                                                <div id="compFooter" class="form-control input-style" data-validation="required"
                                                                    data-error-message="Footer Text is required.">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
    
                                                    <textarea name="compHeaderContent" style="display: none"></textarea>
                                                    <textarea name="compFooterContent" style="display: none;"></textarea>
                                                    
                                                </div>




                                                <div class="form-row">
                                                    <div class="col-12 mb-3">
                                                        <div class="form-group">
                                                            <div class="col-xl-12 p-heading">
                                                                <h6 class="p-text">COMPANY LOGO / IMAGE</h6>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-row">
                                                    <div class="col-4 ">
                                                        <div class="form-group"><label class="input__label">company
                                                                logo</label><input name="comp_logo" id="comp_logo"
                                                                type="file" accept="image/*"
                                                                class="form-control input-style" placeholder="Title"
                                                                style="display: none;" data-validation="required"
                                                                data-error-message="Company Logo is required.">
                                                            <div class="form-group">
                                                                <img alt="" id="comp_logo_img"
                                                                    style="max-width: 110px;">
                                                                <button type="button" id="cancel1"
                                                                    class="btn-danger btn-style btn mt-3 mr-2"
                                                                    style="display: none;">Remove</button>
                                                                <button type="button"
                                                                    class="btn btn-style mt-2 btn-primary btn-style btn-change"
                                                                    id="comp_logo_btn"
                                                                    onclick="document.getElementById('comp_logo').click();"><strong><i
                                                                            class="fas fa-upload"></i>
                                                                        Upload</strong></button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-4 ">
                                                        <div class="form-group"><label class="input__label">header
                                                                image</label><input name="head_image" id="head_image"
                                                                type="file" class="form-control input-style"
                                                                placeholder="Title" style="display: none;"
                                                                data-validation="required"
                                                                data-error-message="Header image  is required.">
                                                            <div class="form-group">
                                                                <img alt="" id="head_image_img"
                                                                    style="max-width: 110px;">
                                                                <button type="button" id="cancel2"
                                                                    class="btn-danger btn-style btn mt-3 mr-2"
                                                                    style="display: none;">Remove</button>
                                                                <button type="button"
                                                                    class="btn btn-style mt-2 btn-primary btn-style btn-change"
                                                                    id="head_image_btn"
                                                                    onclick="document.getElementById('head_image').click();"><strong><i
