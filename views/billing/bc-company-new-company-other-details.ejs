                    <script src="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.js"></script>
                    <link href="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.snow.css" rel="stylesheet">
                    
                    <!-- Initialize Quill Editors -->
                    <script>
                      const quill = new Quill("#compHeader", {
                        theme: "snow",
                      });
                      
                      const quill1 = new Quill("#compFooter", {
                        theme: "snow",
                      });
                    </script>
                    
                    <!-- Image Upload Scripts -->
                    <script type="module">
                      import { uploadImg } from '../javascripts/uploadImg.js';
                      uploadImg('#comp_logo', '#comp_logo_img', '#comp_logo_btn', '#cancel1');
                      uploadImg('#head_image', '#head_image_img', '#head_image_btn', '#cancel2');
                      uploadImg('#comp_footer_image', '#comp_footer_image_img', '#comp_footer_image_btn', '#cancel3');
                    </script>
                    
                    <!-- Form Validation and Submission -->
                    <script type="module">
                        import { validateForm } from '../javascripts/validation.js';
                        import { myAjax } from '../javascripts/myAjax.js';
                      
                        $(document).ready(function () {
                          console.log("Document is ready");
                      
                          // Handle form submission
                          $('#bc-c-n-o-t').on('submit', function (event) {
                            event.preventDefault();
                      
                            // Extract content from Quill editors and set it in hidden textarea fields
                            const compHeaderContent = quill.root.innerHTML;
                            const compFooterContent = quill1.root.innerHTML;
                      
                            // Add the extracted content to hidden textarea fields in the form
                            $('textarea[name="compHeaderContent"]').val(compHeaderContent);
                            $('textarea[name="compFooterContent"]').val(compFooterContent);
                      
                            // Validate the form
                            const { isValid, errorMessage, formData } = validateForm('#bc-c-n-o-t');
                      
                            console.log(formData);
                            const errorDivId = '#errordiv1';
                      
                            if (isValid) {
                              const url = '/billing/bc_c_n_o_d';
                              const loadingDiv = '#loadingIndicator';
                              myAjax(formData, errorDivId, url, loadingDiv);
                            } else {
                              alert(errorMessage);
                              $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(errorMessage).show();
                            }
                          });
                        });
                      </script>
                      