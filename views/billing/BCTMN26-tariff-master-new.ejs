                   function updateQuery(){
        document.getElementById('query').value=1;
        $('#mod-btn').prop('disabled', true);   
        $('input[data-validation], select[data-validation]').prop('disabled', false);
        $('#code').prop('disabled', true);
        document.getElementById('submit').disabled=false;
      }
      if('<%= result.id %>'!==''){
        $('input[data-validation], select[data-validation]').prop('disabled', true); 
      }
      if('<%= result.trf_status %>'!=='true'){
        document.getElementById('mod-btn').disabled = true;
      }else{

        document.getElementById('submit').disabled=false;
       
       }
                </script>

                    <script type="module">
                        import { pagi_search } from '../javascripts/pagi_search.js';
                        import { validateForm } from '../javascripts/validation.js';
                        import { myAjax } from '../javascripts/myAjax.js';
                        const loadingDiv = document.getElementById('loadingIndicator');
                        $(document).ready(function () {
                            console.log("Document is ready");
                           


                            function fetchServices() {
        $.ajax({
            url: '/billing/get-service',
            type: 'GET',
            success: function(data) {
                let html = '';
                data.forEach(service => {
                    html += `
                        <tr>
                            <td><input type="checkbox" class="service-checkbox" value="${service.id}"></td>
                            <td>${service.serviceCode}</td>
                            <td>${service.serviceName}</td>
                            <td>${service.baseServiceRate}</td>
                        </tr>
                    `;
                });
                $('#serMst').html(html);
            },
            error: function(xhr, status, error) {
                console.error('Error fetching services:', error);
            }
        });
    }
    $('#addServicesButton').click(function() {
        $('.service-checkbox:checked').each(function() {
            const row = $(this).closest('tr').clone();
            $(row).find('td:first').remove(); // Remove the checkbox column
            $('#tariffServices').append(row);
        });
        $('#myModal').modal('hide'); // Close the modal
    });
    // Attach event listener to fetch services when modal opens
    $('#myModal').on('shown.bs.modal', function() {
        fetchServices();
    });



                            function fetchData() {
                                $.ajax({
                                    url: '/billing/getTriData',
                                    type: 'GET',
                                    success: function (data) {
                                        data.reverse();
                                        let tableRows = '';
                                        data.forEach(function (item) {
                                            tableRows += `
                                                <tr>
                                                    <td><a type="button" class="btn btn-primary btn-style btn-change"  onClick=updatePage(${item.id}) href='/3' >View</a></td>
                                                    <td>${item.exp_master_code}</td>
                                                    <td>${item.exp_master_desc}</td>
                                                    <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' onClick=ChangeStatus(${item.id}) ${item.exp_status ? 'checked' : ''}></td>
                                                </tr>
                                            `;
                                        });
                                        $('#exp-table').html(tableRows);
                                        pagi_search('#searchBox', '#bcExp', '#paginationControls');
                                    },
                                    error: function (xhr, status, error) {
                                        console.error('Error fetching classification details:', error);
                                    }
                                });
                            }

                            function populateServices(services) {
            let html = '';
            services.forEach(service => {
                html += `
                    <tr>
                        <td>${service.code}</td>
                        <td>${service.name}</td>
                        <td>${service.rate}</td>
                    </tr>
                `;
            });
            $('#tariffServices').html(html);
        }   

                            // Fetch data on page load
                            fetchData();

                            function loadTariffData() {
    const id = '<%= result.id %>'; // Get the ID rendered into the page
    if (id) {
        $.ajax({
            url: '/billing/get_tariff_master',
            type: 'GET',
            success: function(data) {
                // Assuming data is an array of tariffs
                const tariff = data.find(tariff => tariff.id === parseInt(id)); // Find the tariff with the matching ID
                if (tariff) {
                    $('#code').val(tariff.trf_code.trim());
                    $('input[name="contact_person"]').val(tariff.trf_name.trim());
                    $('#query').val(1); // Set to modify mode
                    populateServices(tariff.services); // Assuming 'services' is part of the fetched data
                } else {
                    console.error('Tariff not found');
                }
            },
            error: function(xhr, status, error) {
                console.error('Error fetching tariff details:', error);
            }
        });
    }
}



                            $('#BC-trf-master-new').on('submit', function (event) {
                                event.preventDefault()
                                const { isValid, errorMessage } = validateForm('#BC-trf-master-new')

                               
                                const errorDivId = '#errordiv1'

                                if (isValid) {
                                    const tariffCode = $('#code').val();
        const tariffName = $('input[name="contact_person"]').val();
        const services = [];

        $('#tariffServices tr').each(function() {
            const serviceCode = $(this).find('td:eq(0)').text();
            const serviceName = $(this).find('td:eq(1)').text();
            const serviceRate = $(this).find('td:eq(2)').text();
            services.push({
                code: serviceCode,
                name: serviceName,
                rate: serviceRate
            });
        });

        const formData = {
                    code: tariffCode,
                    contact_person: tariffName,
                    services: services,
                    query: $('#query').val(), // Include the query field
                    itemid: $('input[name="itemid"]').val() // Include the itemid field
                };

        $.ajax({
            url: '/billing/bc-tariff-master-new',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function(response) {
              
        alert('Form submitted successfully!');
        $(errorDivId).removeClass('alert-danger').addClass('alert-success').text('Form submitted successfully!').show();
        console.log('Response:', response);
            }, error: function(xhr, status, error) {
        // Hide loading indicator on error
        $(loadingDiv).hide();
        
        const response = JSON.parse(xhr.responseText);
        console.log('Error:', response);
        $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(response.msg).show();
        console.error('Error:', error);
    }
        });

                                } else {
                                    alert(errorMessage);
                                    $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(errorMessage).show();
                                    // $(errorDivId).text(errorMessage).show();
                                }
                            })

                            loadTariffData();
                        });
                    </script>