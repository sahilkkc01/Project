                                    <button type="button" class="btn-danger btn-style btn mt-3 mr-2" onclick="window.location.href='/billing/6';"><strong><i
                                                class="fas fa-times"></i> Cancel</strong></button>

                                    <button type="submit" class="btn-primary btn-style btn mt-3" id="sub-btn" <%= result.id ? 'disabled' : '' %>><strong><i
                                                class="far fa-save"></i> Save</strong></button>
                                </div>
