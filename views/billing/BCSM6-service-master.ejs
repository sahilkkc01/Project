<script type="module">
    import { pagi_search } from '../javascripts/pagi_search.js';
    $(document).ready(function () {
        console.log("Document is ready");
        fetchData();
    });

    function fetchData() {
        $.ajax({
            url: '/billing/get-service',
            type: 'GET',
            success: function (data) {
                console.log(data);
                data.reverse();
                let tableRows = '';
                data.forEach(function (item) {
                    console.log(item);
                    tableRows += `
                        <tr data-mod-id='${item.id}'>
                            <td><button id='view-btn'  class="btn btn-primary btn-style btn-change" >View</button></td>
                            <td>${item.serviceCode}</td>
                            <td>${item.serviceName}</td>
                            <td>${item.specialization}</td>
                            <td>${item.subSpecialization}</td>
                            <td>${item.baseServiceRate}</td>
                            <td><input id='status-checkbox' class="form-check-input mt-0" type="checkbox" data-id='${item.id}' ${item.status ? 'checked' : ''}>
</td>
                        </tr>
                        `;
                });
                $('#serMst').html(tableRows);
                pagi_search('#searchBox', '#serMstTable', '#paginationControls');
            },
            error: function (xhr, status, error) {
                console.error('Error fetching classification details:', error);
            }
        });
        $('#serMst').on('click', '#view-btn',function(){
                                       const id=$(this).closest('tr').data('mod-id')
                                       console.log(id)
                                         ViewBtn('5',id,'billing');      
                                   });
                                    $('#serMst').on('click', '#status-checkbox', function () {
                                       const itemId = $(this).data('id');
                                       const isChecked = $(this).is(':checked');
                                       const schema = '<%= a %>'
                                       const status = '<%= b %>'
                                       console.log(itemId, isChecked,schema)
                                       updateStatus(itemId, isChecked,schema,status);
                                    });
    }
</script>
