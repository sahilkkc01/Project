                                    ><strong><i class="fa-regular fa-pen-to-square"></i>
                                            Modify</strong></button>

                                    <button type="button" class="btn-secondary btn-style btn mt-3 mr-2"
                                        disabled="disabled"><strong><i class="fa-solid fa-plus"></i>
                                            New</strong></button>
                                            <button type="button" class="btn-danger btn-style btn mt-3 mr-2"  onclick="window.location.href='/billing/30';"><strong><i
                                                class="fa-solid fa-plus"></i> Cancel</strong></button>        

                                    <button type="submit" id="submit"class="btn-primary btn-style btn mt-3 " <%= result.id ? 'disabled' : '' %>><strong><i
                                                class="far fa-save"></i> Save</strong></button>
