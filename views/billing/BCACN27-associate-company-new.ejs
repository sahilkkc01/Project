            <!-- content -->
            <div class="container-fluid">

                <div class="chart">
                    <div class="row">

                        <div class="col-lg-12 pl-lg-0 mt-2 ml-2">
                            <h4 class="primary">Associated Company</h4>
                        </div>
                        <div class="col-lg-12 pl-lg-2 chart-grid">
                            <form id="BC-Ass-Comp-New">
                                <input type="hidden" name="query" id="query" value="0">
                                <div id="errordiv1"></div>
                                <div class="card card_border">
                                    <div class="">
                                        <!--Past your code here starts-->

                                        <div class="card">
                                            <div class="col-xl-12 p-heading">
                                                <h6 class="p-text">COMPANY ASSOCIATE DETAILS</h6>
                                            </div>
                                            <div class="card-body">

                                                <div class="form-row">
                                                    <div class="col-3 mb-3 mb-3">
                                                        <div class="form-group"><label
                                                                class="input__label">Code</label><input name="code" id="code" data-validation="required" data-error-message="Code id Required" <%= result.id ? 'disabled' : '' %>
                                                                value="<%= result.code %>" type="text"
                                                                class="form-control input-style" placeholder=""></div>
                                                    </div>
                                                    <div class="col-3 mb-3 mb-3">
                                                        <div class="form-group"><label
                                                                class="input__label">description</label><input data-error-message="Description is Required" data-validation="required"
                                                                name="description" type="text" <%= result.id ? 'disabled' : '' %>
                                                                value="<%= result.description %>"
                                                                class="form-control input-style" placeholder=""></div>
                                                    </div>
                                                    <div class="col-3 mb-3 mb-3">
                                                        <div class="form-group"><label
                                                                class="input__label">company</label><select data-error-message="Company is Required"  data-validation="required" <%= result.id ? 'disabled' : '' %>
                                                                name="company" class="form-control input-style"
                                                                value="">
                                                                <option value="">Select</option>
                                                                <option value="<%= result.company %>" <%=result.company
                                                                    ? 'selected' : '' %>> <%= result.company %>
                                                                </option>
                                                                <option value="Company 1">Company 1</option>
                                                                <option value="Company 2">Company 2</option>
                                                            </select></div>
                                                    </div>
                                                    <div class="col-3 mb-3 mb-3">
                                                        <div class="form-group"><label
                                                                class="input__label">tariff</label><select name="tariff" data-error-message="Tariff is Required"  data-validation="required"  <%= result.id ? 'disabled' : '' %>
                                                                class="form-control input-style">
                                                                <option>Select</option>
                                                                <option value="<%= result.tariff %>" <%=result.tariff
                                                                    ? 'selected' : '' %>> <%= result.tariff %>
                                                                </option>
                                                                <option value="Tariff 1">Tariff 1</option>
                                                                <option value="Tariff 2">Tariff 2</option>
                                                            </select></div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div id="loadingIndicator"></div>
                                        </div>

                                        <!--Past your code here ends-->
                                    </div>
                                </div>
                                <div class="form-group mt-1 mb-3 text-right">
                                    <button type="button" class="btn-success btn-style btn mt-3 mr-2" id="mod-btn" onclick="updateQuery()"><strong><i
                                                class="fa-regular fa-pen-to-square"></i> Modify</strong></button>

                                    <button type="button" class="btn-danger btn-style btn mt-3 mr-2" onclick="window.location.href='/billing/15';"><strong><i
                                                class="fa-solid fa-plus"></i>Cancel</strong></button>


                                    <button type="submit" id="submit" class="btn-primary btn-style btn mt-3"  <%= result.id ? 'disabled' : '' %>><strong><i
                                                class="far fa-save"></i> Save</strong></button>
                                </div>
                            </form>
                        </div>
                       <%- include('../footer'); -%>
                        <script>
                            function updateQuery(){
                                document.getElementById('query').value=1;
                                $('#mod-btn').prop('disabled', true);   
                                $('input[data-validation], select[data-validation]').prop('disabled', false);
                                $('#code').prop('disabled', true);
                                document.getElementById('submit').disabled=false;
                              }
                              if('<%= result.id %>'!==''){
                                $('input[data-validation], select[data-validation]').prop('disabled', true);  
                              }else{
                                document.getElementById('submit').disabled=false;
                                document.getElementById('mod-btn').disabled=true;}
                        </script>

                            <script type="module">
                                import { validateForm } from '../javascripts/validation.js';
                                import { myAjax } from '../javascripts/myAjax.js';
                                $(document).ready(function () {
                                    console.log("Document is ready");

                                    $('#BC-Ass-Comp-New').on('submit', function (event) {
                                        event.preventDefault()
                                        const { isValid, errorMessage, formData } = validateForm('#BC-Ass-Comp-New')

                                        console.log(formData)
                                        const errorDivId = '#errordiv1'

                                        if (isValid) {
                                            const url = '/billing/bc-ass-comp-new';
                                            const loadingDiv = '#loadingIndicator'
                                            myAjax(formData, errorDivId, url, loadingDiv)

                                        } else {
                                            alert(errorMessage);
                                            $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(errorMessage).show();
                                            // $(errorDivId).text(errorMessage).show();
                                        }
                                    })

                                });
                            </script>