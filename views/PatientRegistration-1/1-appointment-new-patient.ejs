    $('#doctor').empty().append('<option value="">Select</option>');

    if (departmentSubSpec && clinicId) {
        $.getJSON(`/findpatient/doctors?clinicId=${clinicId}&departmentSubSpec=${departmentSubSpec}`, function(data) {
