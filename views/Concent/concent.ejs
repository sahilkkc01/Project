                        <script type="module">
                            import { pagi_search } from '../javascripts/pagi_search.js';
                            import { validateForm } from '../javascripts/validation.js';
                            import { myAjax } from '../javascripts/myAjax.js';
                            $(document).ready(function () {
                                console.log("Document is ready");
                                // Function to fetch and display data

                                function fetchData() {
                                    $.ajax({
                                        url: '/plshBill/get-concent',
                                        type: 'GET',
                                        success: function (data) {
                                            console.log(data);

                                            // data.reverse();
                                            let tableRows = '';
                                            data.forEach(function (item) {
                                                console.log(item);
                                                tableRows += `
                                                    <tr>
                                                        <td>${item.id}</td>
                                                        <td>${item.Cname}</td>
                                                        <td>${item.Csection}</td>
                                                        <td><input class="form-check-input mt-0" type="checkbox" id='${item.id}' ${item.Cstatus ? 'checked' : ''}></td>
                                                        <td><a type="button" class="btn btn-primary btn-style btn-change" data-cfile="${item.Cfile}" onClick=getSetValue('${item.Cfile}') data-bs-toggle="modal" data-bs-target="#myModal">print</a></td>
                                                    `;
                                            });
                                            $('#concentBodyId').html(tableRows);
                                            pagi_search('#searchBox', '#concentTableId', '#paginationControls');
                                        },
                                        error: function (xhr, status, error) {
                                            console.error('Error fetching classification details:', error);
                                        }
                                    });
                                }
                                fetchData();

                            });


                        </script>


                        <script type="module">
                            import { validateForm } from '../javascripts/validation.js';
                            import { myAjax } from '../javascripts/myAjax.js';
                            $(document).ready(function () {
                                console.log("Document is ready");
                                $('#formId').on('submit', function (event) {
                                    event.preventDefault();
                                    submitForms();
                                });

                                const submitForms = () => {
                                    event.preventDefault();

                                    const concentFormDetails = validateForm('#formId');
                                    const { isValid: concentFormValid, errorMessage: concentFormError, formData: concentFormData } = concentFormDetails;
                                    console.log(concentFormData);
                                    let fileName = $('#fileName').val()
                                    fileName = fileName.split('.pdf')[0]
                                
                                    concentFormData.fileName = fileName
                                    const errorDivId = '#errordiv1';
                                    if (concentFormValid) {
                                        const url = '/plshBill/print-concent';
                                        const loadingDiv = '#loadingDiv';
                                        myAjax(concentFormData, errorDivId, url, loadingDiv);
                                    } else {
                                        alert(concentFormError);
                                        $(errorDivId).removeClass('alert-success').addClass('alert-danger').text(concentFormError).show();
                                    }
                                };
                            }) 
                        </script>
                        <script>
                            function getSetValue(formData) {
                                console.log(formData);
                                $('#fileName').val(formData)
                            }
                        </script>