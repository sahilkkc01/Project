<<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>LifeLinker</title>

    <!-- Template CSS -->
   <%- include('../header'); -%>
    <!-- Modal -->
    <div class="modal fade" id="itemListModal" tabindex="-1" role="dialog" aria-labelledby="itemListModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="itemListModalLabel">Item List With Category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="itemType" id="items" value="items" checked>
                            <label class="form-check-label" for="items">Items</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="itemType" id="itemsCategory" value="itemsCategory">
                            <label class="form-check-label" for="itemsCategory">Items Category</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="itemType" id="itemsGroup" value="itemsGroup">
                            <label class="form-check-label" for="itemsGroup">Items Group</label>
                        </div>
                    </div>
                    
                    <!-- Items Section -->
                    <div id="itemsSection">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="itemName">Item Name</label>
                                <input type="text" class="form-control" id="itemName">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="brandName">Brand Name</label>
                                <input type="text" class="form-control" id="brandName">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="itemCode">Item Code</label>
                                <input type="text" class="form-control" id="itemCode">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="itemCategory">Item Category</label>
                                <select id="itemCategory" class="form-control">
                                    <option selected>-- Select --</option>
                                    <option>Medical</option>
                                    <option>Lab Consumables</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="itemGroup">Item Group</label>
                                <select id="itemGroup" class="form-control">
                                    <option selected>-- Select --</option>
                                    <option>Drugs</option>
                                    <option>Medical Consumables</option>
                                </select>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="manufacturedBy">Manufactured By</label>
                                <select id="manufacturedBy" class="form-control">
                                    <option selected>-- Select --</option>
                                    <option>Roche</option>
                                    <option>Romsons</option>
                                </select>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="molecule">Molecule</label>
                                <select id="molecule" class="form-control">
                                    <option selected>-- Select --</option>
                                    <option>Molecule 1</option>
                                    <option>Molecule 2</option>
                                </select>
                            </div>
                            <div class="form-group col-md-3 align-self-end">
                                <button class="btn btn-primary">Search</button>
                            </div>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Item Code</th>
                                    <th scope="col">Item Name</th>
                                    <th scope="col">Item Category</th>
                                    <th scope="col">Manufactured By</th>
                                    <th scope="col">Item Group</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Example row -->
                                <tr>
                                    <th scope="row">1</th>
                                    <td>001</td>
                                    <td>3-Way Stop Cock</td>
                                    <td>Medical</td>
                                    <td>Romsons</td>
                                    <td>Medical Consumable</td>
                                </tr>
                                <!-- Add more rows as needed -->
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Items Category Section -->
                    <div id="itemsCategorySection" class="hidden-section">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Select</th>
                                    <th scope="col">Category</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Example row -->
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>Medical</td>
                                </tr>
                                <!-- Add more rows as needed -->
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Items Group Section -->
                    <div id="itemsGroupSection" class="hidden-section">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Select</th>
                                    <th scope="col">Group</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Example row -->
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>Medical Consumables</td>
                                </tr>
                                <!-- Add more rows as needed -->
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Ok</button>
                </div>
            </div>
        </div>
    </div>
    <%- include('../header'); -%>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            $('input[name="itemType"]').change(function() {
                $('.hidden-section').hide();
                if (this.value === 'items') {
                    $('#itemsSection').show();
                } else if (this.value === 'itemsCategory') {
                    $('#itemsCategorySection').show();
                } else if (this.value === 'itemsGroup') {
                    $('#itemsGroupSection').show();
                }
            });
            
            // Initialize the modal and show the default section
            $('#itemListModal').on('shown.bs.modal', function () {
                $('#itemsSection').show();
            });
        });
    </script>
<%- include('../footer'); -%>
